		<td align="center">序号</td>
		<td align="center">名称</td>
		<td align="center">操作</td>
	</tr>
	{{section name=ol loop=$list}}
	<tr class="tr3" t_one="t_one">
		<td><!--<input name="ids[]" type="checkbox" id="ids[]" value="{{$list[ol].id}}" />-->{{$list[ol].id}}</td>
		<td>{{if empty($smarty.get.fid)}}<a href="?action={{$act_name}}&amp;fid={{$list[ol].id}}">{{$list[ol].name}}</a>
		{{else}}{{$list[ol].name}}{{/if}}</td>
		<!--<td><a
			href="op_product.php?op=up&id={{$list[ol].id}}&tid={{$list[ol.index_prev].id|default:0}}"
			target="op">上升</a> <a
			href="op_product.php?op=down&id={{$list[ol].id}}&tid={{$list[ol.index_next].id|default:0}}"
			target="op">下降</a></td>-->
		<td>
		<a href="?action={{$act_name}}&add&id={{$list[ol].id}}">编辑</a>
		<a href="?action={{$act_name}}&del={{$list[ol].id}}" onclick="return confirm('您确定删除吗？')">删除</a>&nbsp;&nbsp;&nbsp;		
		{{if empty($smarty.get.fid)}}<a href="?action={{$act_name}}&amp;add&amp;fid={{$list[ol].id}}">增加子栏目</a>{{/if}}</td>
	</tr>
	<tr class="tr3" t_one="t_one">
	  <td colspan="3">{{$pager.render}}</td>
	  </tr>
	{{/section}}
</table>
