	  <td colspan="3" align="left">
	  <span class="sub">
	  {{if empty($smarty.get.fid)}}
	  <input type="button" onclick="$goto('?action={{$act_name}}&add')" value="增加一级分类" class="btn">
	  {{else}}
	  <input type="button" onclick="history.back()" value="返回上级" class="btn">
